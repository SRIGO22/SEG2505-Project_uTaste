<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.utasteapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTasteApplication"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activities -->
        <activity
            android:name=".AdministratorHomeActivity"
            android:exported="true" />
        <activity
            android:name=".ChefHomeActivity"
            android:exported="true" />
        <activity
            android:name=".WaiterHomeActivity"
            android:exported="true" />

        <!-- User & Waiter Management -->
        <activity
            android:name=".ManageWaitersActivity"
            android:exported="false" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false" />

        <!-- Recipe Management -->
        <activity
            android:name=".ManageRecipesActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".RecipeDetailsActivity"
            android:exported="false" />

        <!-- Ingredients Management -->
        <activity
            android:name=".ManageIngredientsActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditIngredientActivity"
            android:exported="false" />

    </application>

</manifest>
